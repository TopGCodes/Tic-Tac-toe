<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
          android:layout_centerInParent="true"
        android:background="@drawable/main"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/row0_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:id="@+id/row0_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:id="@+id/row0_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:onClick="dropIn"
            android:tag="2" />

        <ImageView
            android:id="@+id/row1_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:onClick="dropIn"
            android:tag="3" />

        <ImageView
            android:id="@+id/row1_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:onClick="dropIn"
            android:tag="4" />

        <ImageView
            android:id="@+id/row1_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:onClick="dropIn"
            android:tag="5" />

        <ImageView
            android:id="@+id/row2_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:id="@+id/row2_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:id="@+id/row2_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="40dp"
            android:onClick="dropIn"
            android:tag="8" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/winner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Winner"
            android:textStyle="italic"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:textSize="24dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PLAY Again?"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="396dp"
            android:onClick="playAgain"/>

    </LinearLayout>


</RelativeLayout>